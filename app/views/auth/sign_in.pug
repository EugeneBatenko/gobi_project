extends ../layout

block content
  .container.text-center
    h1 Login

    form(action='/api/login' method='POST' id='sign_in_form')
      .form-floating.mb-3
        input.form-control(type='email' name='email' id='email' placeholder='Enter email')
        label(for='email') Email
        .invalid-feedback.email-error

      .form-floating.mb-3
        input.form-control(type='password' name='password' id='password' placeholder='Enter password')
        label(for='password') Password
        .invalid-feedback.password-error

      button.btn.btn-primary(type='submit') Submit
      a.link-primary(href='/sign-up') Sign up


